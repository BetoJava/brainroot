{
  "name": "brainroot-dev",
  "private": true,
  "scripts": {
    "dev:db": "docker compose up -d mongodb",
    "dev:api": "pnpm -C backend start:dev",
    "dev:front": "pnpm -C frontend dev -- --host 0.0.0.0 --port 4173",
    "dev:all": "concurrently \"pnpm -C backend start:dev\" \"pnpm -C frontend dev -- --host 0.0.0.0 --port 5173\"",
    "dev": "pnpm run dev:db && pnpm run dev:all"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}

